<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000">

    <TextView
        android:id="@+id/textinput"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:maxLines="1"
        android:textSize="25dp"
        android:background="#fff"
        android:gravity="end"
        android:paddingRight="15dp"
        android:textAlignment="viewEnd"/>
    <TextView
        android:id="@+id/textoutput"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="25dp"
        android:background="#fff"
        android:gravity="end"
        android:paddingRight="15dp"
        android:textAlignment="viewEnd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ce"
                style="@style/buttonorange"
                android:text="CE"/>
            <TextView
                android:id="@+id/un1"
                style="@style/buttonorange"
                android:text="("/>
            <TextView
                android:id="@+id/un2"
                style="@style/buttonorange"
                android:text=")"/>
            <TextView
                android:id="@+id/divide"
                style="@style/buttonorange"
                android:text="/"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seven"
                style="@style/buttonblack"
                android:text="7"/>
            <TextView
                android:id="@+id/eight"
                style="@style/buttonblack"
                android:text="8"/>
            <TextView
                android:id="@+id/nine"
                style="@style/buttonblack"
                android:text="9"/>
            <TextView
                android:id="@+id/times"
                style="@style/buttonorange"
                android:text="*"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/four"
                style="@style/buttonblack"
                android:text="4"/>
            <TextView
                android:id="@+id/five"
                style="@style/buttonblack"
                android:text="5"/>
            <TextView
                android:id="@+id/six"
                style="@style/buttonblack"
                android:text="6"/>
            <TextView
                android:id="@+id/minus"
                style="@style/buttonorange"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/one"
                style="@style/buttonblack"
                android:text="1"/>
            <TextView
                android:id="@+id/two"
                style="@style/buttonblack"
                android:text="2"/>
            <TextView
                android:id="@+id/three"
                style="@style/buttonblack"
                android:text="3"/>
            <TextView
                android:id="@+id/plus"
                style="@style/buttonorange"
                android:text="+"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/coma"
                style="@style/buttonblack"
                android:text="."/>
            <TextView
                android:id="@+id/zero"
                style="@style/buttonblack"
                android:text="0"/>
            <ImageView
                android:id="@+id/erase"
                style="@style/buttonblack"
                android:src="@drawable/ic_backspace_black_24dp"
                android:scaleType="center"/>
            <TextView
                android:id="@+id/equal"
                style="@style/buttonorange"
                android:text="="/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>